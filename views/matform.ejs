    $(function() {
  $('#addressYears').change(function() {
    var userNumber = $(this).val();
    if (userNumber <= 0) {
      $("#form-group").empty();
    } else {
      create(userNumber);
    }
  });
  
function create(userNumber) {
    const fg = document.getElementById("form-group");
