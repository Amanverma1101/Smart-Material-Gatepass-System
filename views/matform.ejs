    $("#form-group").empty();
  for (var i = 1; i <= userNumber; i++) {
//   $("#userFields").fadeIn(600);
  fg.innerHTML+=`
  <h2 class="heading1">Details of Item-${i}</h2>
            <div class="grid">
            <div class="col-1-3 col-1-3-sm">
