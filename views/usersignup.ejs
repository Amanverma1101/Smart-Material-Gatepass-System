<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<link rel="stylesheet" href="/css/usersignup.css">
</head>
<body>
	<div class="form_wrapper">
		<div class="form_container">
			<div class="title_container">
				<h2>Responsive Registration Form</h2>
			</div>
			<div class="row clearfix">
				<div class="">
					<form method="post" action="/usersignup" id='register-form' autocomplete="off">
						<div class="row clearfix">
							<div class="col_half">
								<div class="input_field">
									<span>
										<i aria-hidden="true" class="fa fa-user"></i>
									</span>
									<input type="text" name="name" placeholder="First Name" required />
								</div>
							</div>
							<div class="col_half">
								<div class="input_field">
									<span>
										<i aria-hidden="true" class="fa fa-user"></i>
									</span>
									<input type="text" name="name" placeholder="Last Name" required />
								</div>
							</div>
						</div>
						<div class="input_field">
							<span>
								<i aria-hidden="true" class="fa fa-phone"></i>
							</span>
							<input type="text" pattern="[6789][0-9]{9}" name="phone" placeholder="Phone No.(excluding +91)" required />
						</div>
						<div class="input_field">
							<span>
								<i aria-hidden="true" class="fa fa-envelope"></i>
							</span>
							<input type="email" name="email" placeholder="Email" required />
						</div>
						<div class="input_field">
							<div class="select_option">
								<span class="select_arrow">
								</span>
						<select id="role" name="role" onchange="handleRoleChange(this)" required>
							<option value="">- Type -</option>
							<option value="employee">Employee</option>
							<option value="vendor">Vendor</option>
						  </select>
						</div>
						  </div>
						  <div id="employeeFields" style="display: none;">
							<div id="employeeId" class="input_field">
								<span>
									<i aria-hidden="true" class="fa fa-id-badge"></i>
								</span>
								<input type="text" name="eno" id="employee" placeholder="Enter Personal No." />
							</div>
							<div id="department" class="input_field">
								<span>
									<i aria-hidden="true" class="fa fa-building"></i>
								</span>
								<input type="text" name="dept" id="dept" placeholder="Enter Department" />
							</div>
						</div>
						
					<div id="vendorFields" style="display: none;">
						  <div id="vendorId" class="input_field">
							<span  for="vendor"><i aria-hidden="true" class="fa fa-id-badge">
								</i>
							</span>
							<input type="text" name="vno" id="vendor" placeholder="Enter Vendor Id" required />
						</div>
					</div>
						
						<div class="input_field radio_option">
							<span class='radio_icon'>
								<i class="fa fa-venus-mars" aria-hidden="true"></i>
							</span>
							<div class='radio_group'>
								<input type="radio" name="gender" value="male" id="gender-m" checked="true">
								<label for="gender-m">Male</label>
	
								<input type="radio" name="gender" value="female" id="gender-f">
								<label for="gender-f">Female</label>
							</div>
						</div>
						
						<div class="input_field">
							<span><i aria-hidden="true" class="fa fa-lock">
								</i>
							</span>
							<input type="password" name="password" placeholder="Password" required />
						</div>
						<div class="input_field">
							<span>
								<i aria-hidden="true" class="fa fa-lock"></i>
							</span>
							<input type="password" name="password" placeholder="Re-type Password" required />
						</div>

						
						<div class="input_field checkbox_option">
							<input type="checkbox" id="cb1" required>
							<label for="cb1">I agree with terms and conditions</label>
						</div>
						<!-- <div class="input_field checkbox_option">
							<input type="checkbox" id="cb2">
							<label for="cb2">I want to receive the newsletter</label>
						</div> -->
						<!-- <button id='check-data' class='button'>
							Check Data
						</button> -->
	 
						<input id='submit-data' class="button" type="submit" value="Register" />
						<p class="input_field" style="color: red;"><%= msg %></p>
					</form>
					
				</div>
			</div>
		</div>
	</div>
</body>
<script src="/js/usersignup.js"></script>
<script src="https://use.fontawesome.com/723b3db6c5.js"></script>
</html>