<script>
    const users = '<%= JSON.stringify(data) %>';
    let res = users.replace(/&#34;/g, '"');
    let data = JSON.parse(`${res}`);
    const fg = document.getElementById("form-group");

  for (var i = 1; i <= data.nitems; i++) {
const dn = data[`it${i}Name`];
const dp = data[`it${i}Pno`];
const dq = data[`it${i}Qty`];
  fg.innerHTML+=`
  <h2 class="heading1">Details of Item-${i}</h2>
            <div class="grid">
            <div class="col-1-3 col-1-3-sm">
                <div class="controls">
                    <input type="text" id="it${i}-name" class="floatLabel" name="it${i}Name" value="${dn}"" readonly required>
                    <label for="it${i}-name" class="active">Item Name</label>
                </div>      
            </div>
            <div class="col-1-3 col-1-3-sm">
            <div class="controls">
                <input type="text" id="it${i}-pno" class="floatLabel" name="it${i}Pno" value="${dp}" readonly required>
                 <label for="it${i}-pno" class="active">Product Part No.</label>

            </div>     
            </div>
        
            <div class="col-1-3 col-1-3-sm">
            <div class="controls">
                <input type="text" id="it${i}_qty" class="floatLabel" name="it${i}Qty" value="${dq}" readonly required>
                 <label for="it${i}_qty" class="active">Quantity</label>
            </div>     
            </div>
                
            </div>`;
  }

</script>
